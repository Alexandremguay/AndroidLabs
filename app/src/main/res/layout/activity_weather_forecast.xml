<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexandremguay.androidlabs.WeatherForecast1">

    <ImageView
        android:id="@+id/currentWeather"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentWeather"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="10dip"
        android:layout_marginStart="10dip"
        android:text="Current Temperature"
        android:textSize="10pt"/>

    <TextView
        android:id="@+id/currentTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentWeather"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dip"
        android:layout_marginEnd="50dip"
        android:textSize="10pt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentTemp"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="10dip"
        android:layout_marginStart="10dip"
        android:text="Minimum Temperature"
        android:textSize="10pt"/>

    <TextView
        android:id="@+id/minTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentTemp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dip"
        android:layout_marginEnd="50dip"
        android:textSize="10pt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/minTemp"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="10dip"
        android:layout_marginStart="10dip"
        android:text="Maximum Temperature"
        android:textSize="10pt"/>

    <TextView
        android:id="@+id/maxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/minTemp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dip"
        android:layout_marginEnd="50dip"
        android:textSize="10pt"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dip"
        android:layout_below="@id/maxTemp"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="invisible"
        />


</RelativeLayout>
